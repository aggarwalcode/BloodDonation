<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/ProductCard"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_margin="0dp"
        android:elevation="3dp"
        app:cardCornerRadius="0dp">

        <ImageView
            android:id="@+id/displayPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:contentDescription="@string/user_picture"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="279dp"
            android:layout_height="110dp"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:padding="5dp">


            <!--<ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
-->
            <TextView
                android:id="@+id/nameofNeedy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Name Surname" />

            <TextView
                android:id="@+id/locationOfNeedy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameofNeedy"
                android:padding="2dp"
                android:text="Apple MacBook Air Core i5 5th Gen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/blood_Group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationOfNeedy"
                android:padding="2dp"
                android:text="13.3 Inch, 256 GB"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttona"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="But1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonb"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="But2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonc"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="But3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>